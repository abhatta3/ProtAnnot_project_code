data=open("/home/anindya/Ovarian_known_search/PNNL_knownDB_FDRspec01.txt","r")
outfile=open("Appended_Ovarian_PNNL_knownDB_FDRspec01.txt","w")
outlist=open("sample_and_protein_Ovarian_PNNL_knownDB_FDRspec01.txt","w")






'''
